<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.DayNight" parent="AppTheme.Light"/>
    <style name="AppTheme" parent="android:Theme.DeviceDefault">
        <item name="markdownStyle">@style/MyMarkdown</item>
    </style>
    <style name="AppTheme.Light" parent="android:Theme.DeviceDefault.Light">
        <item name="markdownStyle">@style/MyMarkdown.Light</item>
    </style>

    <style name="MyMarkdown" parent="Markdown">
        <item name="bulletStyle">1</item>
        <item name="bulletHorizontalOffset">-5dp</item>
        <item name="bulletVerticalOffset">-5dp</item>
    </style>
    <style name="MyMarkdown.Light" parent="Markdown.Light">
        <item name="bulletStyle">1</item>
        <item name="bulletHorizontalOffset">-4dp</item>
        <item name="bulletVerticalOffset">0dp</item>
    </style>
</resources>